          </ipxact:register>
          <ipxact:register>
            <ipxact:name>CUR_SRC_ADDR</ipxact:name>
            <ipxact:addressOffset>0x14</ipxact:addressOffset>
            <ipxact:size>32</ipxact:size>
            <ipxact:access>read-only</ipxact:access>
            <ipxact:field>
