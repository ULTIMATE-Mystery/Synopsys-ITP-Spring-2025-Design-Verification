              <ipxact:vendorExtensions>
                <snps:registerField>
                  <snps:fieldHWupdates>
                    <snps:fieldHWupdate>
                      <id>hw_intrclr</id>
                      <trigger>axi4lite_dmac.dma_done</trigger>
                      <value>axi4lite_dmac.intr_en</value>
                      <latency>1</latency>
                      <function>load</function>
                    </snps:fieldHWupdate>
                    <priority>hw_intrclr, sww, swr </priority>
                  </snps:fieldHWupdates>
                </snps:registerField>
              </ipxact:vendorExtensions>
            </ipxact:field>
          </ipxact:register>
          <ipxact:register>
            <ipxact:name>DMA_CTRL</ipxact:name>
