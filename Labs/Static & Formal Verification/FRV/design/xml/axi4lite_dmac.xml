              <ipxact:bitOffset>2</ipxact:bitOffset>
              <ipxact:bitWidth>30</ipxact:bitWidth>
              <ipxact:access>read-only</ipxact:access>
              <ipxact:volatile>true</ipxact:volatile>
              <ipxact:accessHandles>axi4lite_dmac.cur_srca</ipxact:accessHandles>
              <ipxact:reset>
                <ipxact:value>0x0</ipxact:value>
                <ipxact:mask>0x3FFFFFFF</ipxact:mask>
              </ipxact:reset>
            </ipxact:field>
          </ipxact:register>
          <ipxact:register>
            <ipxact:name>DST_ADDR</ipxact:name>
            <ipxact:addressOffset>0x18</ipxact:addressOffset>
            <ipxact:size>32</ipxact:size>
            <ipxact:access>read-write</ipxact:access>
            <ipxact:field>
              <ipxact:name>DSTADDR</ipxact:name>
              <ipxact:bitOffset>2</ipxact:bitOffset>
              <ipxact:bitWidth>30</ipxact:bitWidth>
              <ipxact:access>read-write</ipxact:access>
              <ipxact:accessHandles>axi4lite_dmac.dst_addr</ipxact:accessHandles>
              <ipxact:reset>
                <ipxact:value>0x0</ipxact:value>
                <ipxact:mask>0x3FFFFFFF</ipxact:mask>
              </ipxact:reset>
